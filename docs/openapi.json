{
  "openapi": "3.0.0",
  "info": {
    "title": "Cafes API",
    "version": "1.0.0",
    "description": "API documentation for managing cafes"
  },
  "paths": {
    "/cafe/list": {
      "get": {
        "summary": "List of Cafes",
        "description": "Get a list of all cafes.",
        "responses": {
          "200": {
            "description": "List of cafes.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Cafe"
                  }
                }
              }
          }
        }
      }
      }
    },
    "/cafe/create": {
      "post": {
        "summary": "Create a Cafe",
        "description": "Create a new cafe based on provided data.",
        "requestBody": {
          "description": "Cafe data",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Cafe"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Cafe was successfully created."
          }
        }
      }
    },
    "/api/cafe/{name}": {
      "get": {
        "summary": "Cafe Details",
        "description": "Get details of a cafe.",
        "parameters": [
          {
            "name": "name",
            "in": "path",
            "required": true,
            "description": "Cafe identifier",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Details of the cafe.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Cafe"
                }
              }
            }
          }
        }
      },
      "delete": {
        "summary": "Delete a Cafe",
        "description": "Delete an existing cafe based on its identifier.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "Cafe identifier",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Cafe was successfully deleted."
          }
        }
      },
      "put": {
        "summary": "Update a Cafe",
        "description": "Update an existing cafe based on provided data.",
        "parameters": [
          {
            "name": "name",
            "in": "path",
            "description": "name of the cafe",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "description": "Cafe data",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Cafe"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Cafe was successfully updated."
          }
        }
      }
    },
    "/locations": {
      "get": {
        "summary": "Gets locations",
        "description": "Gets locations of cafes",
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Location"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Cafe": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string",
              "description": "Name of the cafe",
              "example": "Cafe Example"
            },
            "slug": {
              "type": "string"
            },
            "contact": {
              "type": "object",
              "properties": {
                "phone": {
                  "type": "string"
                },
                "email": {
                  "type": "string"
                },
                "web": {
                  "type": "string"
                }
              }
            },
            "address": {
              "type": "object",
              "properties": {
                "street": {
                  "type": "string"
                },
                "postal_code": {
                  "type": "string"
                },
                "city": {
                  "type": "string"
                },
                "location": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  },
                  "description": "Location",
                  "example": ["Praha"]
                }
              }
            },
            "opening_hours": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "day_of_week": {
                    "type": "string"
                  },
                  "open_time": {
                    "type": "string"
                  },
                  "close_time": {
                    "type": "string"
                  }
                }
              }
            },
            "description": {
              "type": "string"
            },
            "coordinates": {
              "type": "object",
              "properties": {
                "lat": {
                  "type": "number",
                  "description": "Latitude coordinate",
                  "maximum": 18
                },
                "lng": {
                  "type": "number",
                  "description": "Longitude coordinate",
                  "maximum": 18
                }
              }
            },
            "image": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "description": "Image URLs"
            }
          },
          "required": ["name", "lat", "lng"]
        },
      "Location": {
        "type": "array",
        "items": {
          "type": "string"
        }
      }
      
    }
  }
}
